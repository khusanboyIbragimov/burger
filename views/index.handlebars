<div class="row">
  <center>
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="ready_to_eat">
        {{#each burgers}} {{#unless devoured}}
        <form action="burger/eat/{{id}}" method="POST">
          <div class="input-group">
            <li class="form-control" style="border:#010101; margin-bottom: 2px;">{{id}}. {{burger_name}}</li>
            <span class="input-group-btn">
              <button class="btn btn-success devour-button" type="submit">Devour It!</button>
            </span>
          </div>
        </form>
        {{/unless}} {{/each}}

      </div>
    </div>
    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">
        {{#each burgers}} {{#if this.devoured}}
        <div class="input-group">
          <li class="form-control" style="border:#010101; margin-bottom: 2px;">{{this.id}}. {{this.burger_name}}</li>
          <span class="input-group-btn">
            <button class="form-control" style="background-color:#010101; border:#010101"></button>
          </span>
        </div>
        {{/if}} {{/each}}

      </div>
    </div>
  </center>
</div>